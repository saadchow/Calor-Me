<div class="row">
    <div class="col s12 m8">
        <h3>{{day.title}}
            <small>{{{editIcon day.user user day._id false}}}</small>
        </h3>
        <div class="card day">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{day.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{day.user.displayName}}</span>
                <img src="{{day.user.image}}" class="circle responsive-img img-small">
            </div>
        </div>
    </div>
</div>