<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your recorded days</p>
{{#if days}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>{{#each days}}
    <tr>
        <td><a href="/day/{{_id}}">{{title}}</a></td>
        <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
        <td>
            <a href="/meals/add" class="btn btn-float">
            <i class="fas fa-solid fa-plus"></i></a>

            <a href="/day/edit/{{_id}}" class="btn btn-float">
                <i class="fas fa-edit"></i>
            </a>
    
            <form action="/day/{{_id}}" method="POST" id="delete-form">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn red">
                    <i class="fas fa-trash"></i>
                </button>
            </form>
        </td>
    </tr>
    {{/each}}
    </tbody>
{{else}}
<p>You have not created any days</p>
{{/if}}